<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_border"
    android:layout_margin="10dp"

    >
    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/layout_for_name">
        <TextView
            android:id="@+id/name"

            android:textAlignment="center"

            android:layout_alignParentStart="true"
            android:layout_weight="1.4995"
            android:layout_height="wrap_content"
            android:layout_width="0dp"


            android:backgroundTint="@color/colorPrimary"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:text="Rakesh Swain"
            />
        <View
            android:layout_gravity="center"

            android:layout_width="0dp"
            android:layout_weight="0.008"
            android:layout_height="30dp"
            android:background="@color/grey"
            android:id="@+id/line"
            android:layout_toRightOf="@+id/layout_for_name">

        </View>
        <TextView

            android:id="@+id/areaOfPracticetxt"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1.4995"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:padding="10dp"
            android:text="Corporate Lawyer"
            android:layout_alignParentEnd="true"
            />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="3"
        android:id="@+id/layout_for_contact_buttons"
        android:orientation="horizontal"
        android:layout_below="@+id/message">
        <ImageButton

            android:id="@+id/callbtn"
            android:src="@drawable/phone"
            android:background="@color/white"
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="30dp" />
        <ImageButton
            android:scaleType="fitCenter"
            android:src="@drawable/email"
            android:background="@color/white"
            android:id="@+id/emailbtn"
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />
        <TextView
            android:gravity="center"
            android:id="@+id/status"
            android:background="@color/white"
           android:text="N:N:N"
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="30dp" />

    </LinearLayout>


    <TextView

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout_for_name"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:hint="message"
        />




    <Button

        android:layout_below="@+id/layout_for_contact_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Appointment"
        android:textColor="#ffff"
        android:id="@+id/cancel_button"
        android:backgroundTint="@color/colorPrimaryDark"
        />


</RelativeLayout>