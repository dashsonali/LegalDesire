<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:gravity="center">
    <EditText

        android:id="@+id/entNextDate"
        android:layout_width="wrap_content"
        android:layout_alignStart="@+id/submit_btn"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/next_datepicker"

       android:background="@drawable/edit_text_border"
        android:hint="Choose Next Date"

        android:inputType="text"
        android:padding="10dp" />
    <Button
        android:background="@drawable/calendar_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/submit_btn"
        android:id="@+id/next_datepicker"
        android:layout_above="@+id/submit_btn"
        android:layout_centerInParent="true"
        />
    <Button
        android:layout_centerInParent="true"
        android:id="@+id/submit_btn"
        android:layout_width="245dp"
        android:text="Submit"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:background="@drawable/button_border"
        android:layout_height="wrap_content"
        android:layout_below="@id/entNextDate"/>

</RelativeLayout>