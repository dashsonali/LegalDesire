<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        >


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="30dp"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/welcmtxt"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="FILE RTI"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_margin="5dp"/>

            <ImageButton
                android:id="@+id/closebtn"
                android:layout_toRightOf="@+id/welcmtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/welcmtxt"
                android:background="#0000"
                android:src="@drawable/ic_close_black_24dp" />




            <EditText
                android:id="@+id/entName"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_border"
                android:gravity="center"
                android:hint="Enter Name"
                android:inputType="text"
                android:layout_below="@id/welcmtxt"
                android:padding="10dp" />
            <EditText
                android:id="@+id/entContact"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_border"
                android:gravity="center"

                android:hint="Enter Contact Number"
                android:layout_below="@id/entName"
                android:inputType="number"
                android:padding="10dp" />
            <EditText
                android:id="@+id/entInformation"
                android:layout_width="235dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_border"
                android:gravity="center"

                android:hint="Questions/Information to be sought"
                android:layout_below="@id/entContact"
                android:inputType="textMultiLine"
                android:padding="10dp" />
            <EditText
                android:id="@+id/entAddress"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_border"
                android:gravity="center"
                android:hint="Enter Postal Address"
                android:layout_below="@id/entInformation"
                android:inputType="text"
                android:padding="10dp" />



            <Button
                android:id="@+id/submit_btn"
                android:layout_width="245dp"
                android:text="Send"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/button_border"
                android:layout_height="wrap_content"
                android:layout_below="@id/entAddress"/>


        </RelativeLayout>


    </RelativeLayout>
</ScrollView>