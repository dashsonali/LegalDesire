<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.legaldesire.LoginActivity"
    android:background="#ffff"
    android:layout_gravity="center"
    android:fillViewport="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
            android:gravity="center"
       >

        <View
            android:id="@+id/line"
            android:background="#000"
            android:layout_alignStart="@id/info"
            android:layout_below="@+id/info"
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="1dp"
           >

        </View>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/info"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-99dp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Welcome to LegalDesire"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:padding="20dp"
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="99dp"
            android:text="Please use your Email ID to Sign In" />

        <Button
            android:id="@+id/usrBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:background="@drawable/layout_border"
            android:layout_alignStart="@+id/line"
            android:text="Sing In as a user "
            android:elevation="5dp"
            />

        <Button
            android:layout_width="251dp"
        android:id="@+id/lawyerBtn"
            android:layout_height="wrap_content"
            android:layout_below="@id/usrBtn"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/layout_border"
            android:elevation="5dp"
            android:layout_alignStart="@id/line"
            android:text="Sing In as a Lawyer "

            android:padding="5dp"
            />


    </RelativeLayout>


</ScrollView>
