<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.example.user.legaldesire.adapters.RecyclerAdapter">

 <android.support.v7.widget.CardView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentStart="true"
     android:layout_alignParentTop="true"

     android:layout_margin="10dp"
     app:cardCornerRadius="5dp"
     >

  <RelativeLayout

      android:id="@+id/parentRelative"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:background="@drawable/recycler_border"

      >
      <LinearLayout
          android:weightSum="3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:id="@+id/layout_for_name">
          <TextView
              android:id="@+id/nametxt"

              android:textAlignment="center"

              android:layout_alignParentStart="true"
              android:layout_weight="1.4995"
              android:layout_height="wrap_content"
              android:layout_width="0dp"


              android:backgroundTint="@color/colorPrimary"
              android:padding="10dp"
              android:layout_alignParentRight="true"
              android:text="Rakesh Swain"
              />
          <View
              android:layout_gravity="center"

              android:layout_width="0dp"
              android:layout_weight="0.008"
              android:layout_height="30dp"
              android:background="@color/grey"
              android:id="@+id/line"
              android:layout_toRightOf="@+id/layout_for_name">

          </View>
          <TextView

              android:id="@+id/areaOfPracticetxt"
              android:layout_gravity="center"
              android:textAlignment="center"
              android:layout_marginLeft="5dp"
              android:gravity="center"

              android:layout_width="0dp"
              android:layout_weight="1.4995"
              android:layout_height="wrap_content"
              android:backgroundTint="@color/colorPrimary"
              android:padding="10dp"
              android:text="Corporate Lawyer"
              android:layout_alignParentEnd="true"
              />

      </LinearLayout>

      <LinearLayout
          android:weightSum="2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/layout_for_rating"

          android:layout_below="@+id/layout_for_name"


          android:gravity="center"
         >
          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:gravity="center"
              android:layout_height="wrap_content">

              <RatingBar
                  android:layout_gravity="center"
                  android:theme="@style/RatingBar"
                  style="?android:attr/ratingBarStyleSmall"
                  android:id="@+id/ratingtxt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:transformPivotX="0dp"
                  android:transformPivotY="0dp"
                  android:isIndicator="true"

                  android:max="5"
                  android:rating="3"
                  android:numStars="5"


                  />

          </LinearLayout>

          <TextView

              android:id="@+id/noOfReviewstxt"
              android:layout_gravity="center"
              android:textAlignment="center"
              android:layout_marginLeft="5dp"
              android:gravity="center"
             android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:backgroundTint="@color/colorPrimary"
              android:padding="10dp"
              android:text="0 Customers Raed"
              android:layout_alignParentEnd="true"
              />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:weightSum="3"
          android:id="@+id/layout_for_contact_buttons"
          android:orientation="horizontal"
          android:layout_below="@+id/layout_for_rating">
          <ImageButton

              android:id="@+id/callbtn"
              android:src="@drawable/phone"
              android:background="@color/white"
             android:layout_margin="20dp"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:scaleType="fitCenter"
              android:layout_height="30dp" />
          <ImageButton
              android:scaleType="fitCenter"
              android:src="@drawable/email"
              android:background="@color/white"
              android:id="@+id/emailbtn"
              android:layout_margin="20dp"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="30dp" />
          <ImageButton

              android:id="@+id/bookbtn"
              android:background="@color/white"
              android:src="@drawable/bookmark"
              android:layout_margin="20dp"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:scaleType="fitCenter"
              android:layout_height="30dp" />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_for_bookbtn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="2"
          android:layout_below="@+id/layout_for_contact_buttons"
          >
          <Button
              android:id="@+id/bookAPPbtn"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:background="@color/colorPrimaryDark"
              android:text="Book Appointment"

              android:textColor="#fff" />
          <Button
              android:id="@+id/locatebtn"

              android:layout_height="wrap_content"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:background="@color/colorPrimaryDark"
              android:text="SHOW ON MAP"
              android:padding="5dp"
              android:textColor="#fff" />

      </LinearLayout>

  </RelativeLayout>


 </android.support.v7.widget.CardView>
</RelativeLayout>
