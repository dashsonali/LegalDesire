<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_border"
    android:layout_margin="10dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_for_name">
        <TextView
            android:id="@+id/case_name"

            android:textAlignment="center"

            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:textColor="@color/black"
            android:backgroundTint="@color/colorPrimary"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:text="HIT AND RUN CASE"
            android:textSize="15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:backgroundTint="@color/black"
            android:background="@color/black">

        </View>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/layout_for_name"
        android:id="@+id/layout_for_court"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Court : Supreme court Bhubaneswar"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lawyer: Rakesh Swain"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oppositon"
            android:text="Opposition: Suresh Thackrey"/>

    </LinearLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/layout_for_dates"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_for_court">

        <TextView
            android:id="@+id/initiation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initiation Date: 2/12/18"></TextView>
        <TextView

            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Date : 2/12/18"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/layout_for_dates"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UPDATE REMINDER"/>
        <Button
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REMOVE"/>
    </LinearLayout>





</RelativeLayout>