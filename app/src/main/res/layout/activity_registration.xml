<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.official.user.legaldesire.RegistrationActivity"
    android:layout_gravity="center"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/regRelative"
       >
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center"
            android:background="@drawable/layout_border">
            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="12dp"
                android:padding="10dp"
                android:innerRadius="0dp"
                app:cardCornerRadius="50dp"
                android:shape="ring"
                android:id="@+id/roundedImageView"
                >
                <ImageView
                    android:id="@+id/roundedImage"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/lawyer"
                    android:padding="5dp"
                    />
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/tapTextView"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Tap To Choose Profile Picture"/>
            <EditText
                android:id="@+id/entName"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:hint="Enter your name"
                android:inputType="text"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/entPass"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_width="250dp"
                android:background="@drawable/edit_text_border"
                android:layout_height="wrap_content"
                android:inputType="textWebPassword"
                android:layout_margin="10dp"

                android:hint="Enter Password"
                />
            <EditText
                android:id="@+id/entContact"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="250dp"

                android:layout_margin="10dp"
                android:background="@drawable/edit_text_border"
                android:layout_height="wrap_content"
                android:hint="Enter Contact"
                android:inputType="numberDecimal"/>
            <EditText
                android:id="@+id/entEmail"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="250dp"
                android:background="@drawable/edit_text_border"
                android:layout_height="wrap_content"
                android:hint="Enter Email"
                android:layout_margin="10dp"
                android:inputType="textEmailAddress"/>
            <Spinner
                android:id="@+id/areaOfPractice"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                android:padding="10dp">

            </Spinner>
            <LinearLayout
                android:id="@+id/consultatonFee"
                android:layout_width="250dp"
                android:orientation="vertical"
                android:weightSum="1"

                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:gravity="center"
                    android:id="@+id/consultationFeeTxt"
                    android:layout_width="match_parent"

                    android:padding="10dp"
                    android:background="@drawable/edit_text_border"
                    android:layout_margin="10dp"
                    android:hint="Consultation Fee in RS/-"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/charges"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:padding="10dp"></Spinner>

            </LinearLayout>

            <Button
                android:layout_width="250dp"
                android:id="@+id/registerBtn"
                android:layout_height="wrap_content"


                android:gravity="center"

                android:background="@drawable/button_border"
                android:elevation="5dp"
                android:layout_margin="10dp"
                android:layout_alignStart="@id/line"
                android:text="REGISTER"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
