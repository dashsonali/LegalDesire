<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.user.legaldesire.adapters.RecyclerAdapter">

 <android.support.v7.widget.CardView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentStart="true"
     android:layout_alignParentTop="true"
     android:padding="20dp"
     android:layout_margin="20dp"
     >

  <RelativeLayout
      android:background="@drawable/recycler_border"
      android:id="@+id/parentRelative"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nametxt"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:padding="10dp"
        android:text="NAME1" />
    <View
        android:layout_margin="10dp"
        android:layout_width="3dp"
        android:layout_height="30dp"
        android:background="#000"
        android:id="@+id/line"
        android:layout_toEndOf="@+id/emailtxt"
        android:layout_above="@id/emailtxt"
        />

    <TextView
        android:layout_toEndOf="@+id/line"
        android:id="@+id/areaOfPracticetxt"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:padding="10dp"
        android:text="CIVIL" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="#fff"
        android:layout_margin="5dp"
        android:src="@drawable/ic_bookmark_black_24dp"
        android:id="@+id/imageButton2" />


   <TextView
       android:layout_marginStart="10dp"
       android:id="@+id/emailtxt"
       android:layout_marginTop="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_below="@+id/nametxt"
       android:backgroundTint="@color/colorPrimary"
       android:padding="10dp"
       android:text="abc@gmail.com" />

   <RatingBar
       android:layout_margin="0dp"
       android:padding="0dp"
       android:id="@+id/ratingtxt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignEnd="@+id/imageButton2"
       android:layout_below="@+id/areaOfPracticetxt"
       android:isIndicator="true"
       android:max="5"
       android:numStars="5"
       android:scaleX="0.5"
       android:scaleY="0.5"

       />



 <TextView
     android:layout_alignParentStart="true"
     android:id="@+id/contacttxt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/emailtxt"
     android:backgroundTint="@color/colorPrimary"
     android:padding="10dp"
     android:layout_margin="10dp"
     android:text="1284378492" />

   <TextView
       android:layout_margin="10dp"
       android:id="@+id/noOfReviewstxt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toEndOf="@+id/emailtxt"
       android:layout_below="@+id/emailtxt"
       android:layout_marginEnd="18dp"
       android:backgroundTint="@color/colorPrimary"
       android:padding="10dp"
       android:text="5000 rated this lawyer" />


      <Button
          android:id="@+id/bookbtn"
          android:layout_marginStart="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/locatebtn"
          android:background="@color/colorPrimary"
          android:padding="10dp"
          android:text="Book Appointment"
          android:textColor="#fff" />

      <Button
          android:id="@+id/locatebtn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignEnd="@+id/noOfReviewstxt"
          android:layout_below="@+id/noOfReviewstxt"
          android:background="@color/colorPrimary"
          android:padding="10dp"

          android:text="Show on map"
          android:textColor="#ffff"
          android:layout_marginBottom="10dp"/>



  </RelativeLayout>


 </android.support.v7.widget.CardView>
</RelativeLayout>
