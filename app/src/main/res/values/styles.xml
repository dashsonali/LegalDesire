<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">#D3D3D3</item>
        <item name="colorControlActivated">#FFDF00</item>

        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
    </style>
    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:indeterminateTint">@color/colorPrimaryDark</item>
    </style>
    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
       <item name="android:textSize">10sp</item>
    </style>


</resources>
